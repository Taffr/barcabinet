{
  "name": "barcabinet-backend",
  "version": "0.0.1",
  "description": "Node Server for the barcabinet backend",
  "main": "server.js",
  "author": "Simon Tenggren",
  "license": "ISC",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "npx dist/server.js",
    "build": "tsc",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js\"",
    "clean": "rm -rf dist/",
    "lint": "eslint .",
    "accept": "tsc --p tsconfig-acceptance.json && cucumber-js --import ./dist/acceptance/step-definitions/ acceptance/features/",
    "unit": "mocha ./dist/test/"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^9.1.2",
    "@types/chai": "^4.3.5",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "chai": "^4.3.7",
    "concurrently": "^8.2.0",
    "eslint": "^8.42.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
